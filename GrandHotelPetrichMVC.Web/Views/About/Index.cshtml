@{
    ViewData["Title"] = "About Us";
}

<!-- Hero Section -->
<section class="pt-20 pb-12 bg-gradient-to-r from-amber-50 to-amber-100">
    <div class="container mx-auto px-4">
        <div class="text-center">
            <h1 class="text-5xl font-bold mb-4 font-serif text-amber-900">About Grand Hotel Petrich</h1>
            <p class="text-xl text-amber-800 max-w-3xl mx-auto">
                Discover the story behind one of Bulgaria's premier luxury hotels, where tradition meets modern elegance.
            </p>
        </div>
    </div>
</section>

<!-- Our Story -->
<section class="py-16">
    <div class="container mx-auto px-4">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
            <div>
                <h2 class="text-4xl font-bold mb-6 font-serif">Our Story</h2>
                <p class="text-gray-600 mb-6 text-lg">
                    Founded in 2020, Grand Hotel Petrich has been a beacon of luxury and hospitality in southwest Bulgaria. What started as a vision to create an exceptional guest experience has evolved into one of the region's most prestigious hotels.
                </p>
                <p class="text-gray-600 mb-6 text-lg">
                    Our commitment to excellence, combined with deep respect for Bulgarian culture and traditions, has made us a preferred destination for discerning travelers from around the world.
                </p>
                <p class="text-gray-600 text-lg">
                    Today, we continue to set new standards in hospitality while maintaining the warmth and personal touch that has defined us from the beginning.
                </p>
            </div>
            <div class="h-96 bg-cover bg-center rounded-lg shadow-lg" style="background-image: url('https://images.unsplash.com/photo-1564501049412-61c2a3083791?auto=format&fit=crop&w=800&q=80')"></div>
        </div>
    </div>
</section>

<!-- Our Values -->
<section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
        <div class="text-center mb-12">
            <h2 class="text-4xl font-bold mb-4 font-serif">Our Values</h2>
            <p class="text-gray-600 max-w-2xl mx-auto">
                These core values guide everything we do and shape every interaction with our guests.
            </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">

            <!-- Value: Hospitality -->
            <div class="bg-white p-6 rounded-lg shadow text-center hover:shadow-lg transition-shadow">
