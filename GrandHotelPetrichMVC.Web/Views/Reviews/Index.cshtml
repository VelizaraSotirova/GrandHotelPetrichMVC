@{
    ViewData["Title"] = "Guest Reviews";
}

<!-- Hero Section -->
<section class="pt-20 pb-12 bg-gradient-to-r from-amber-50 to-amber-100">
    <div class="container mx-auto px-4">
        <div class="text-center">
            <h1 class="text-5xl font-bold mb-4 font-serif text-amber-900">Guest Reviews</h1>
            <p class="text-xl text-amber-800 max-w-3xl mx-auto">
                Discover what our guests say about their experiences at Grand Hotel Petrich.
            </p>
        </div>
    </div>
</section>

<!-- Review Summary -->
<section class="py-16">
    <div class="container mx-auto px-4">
        <div class="grid md:grid-cols-3 gap-8 mb-12">
            <div class="bg-white p-6 rounded-lg shadow text-center">
                <div class="text-4xl font-bold text-amber-600 mb-2">4.8</div>
                <div class="flex justify-center mb-2">
                    @for (int i = 0; i < 5; i++)
                    {
                        <svg class="h-4 w-4 text-yellow-400 fill-current" viewBox="0 0 24 24">
                            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87
                                1.18 6.88L12 17.77l-6.18 3.25L7 14.14
                                2 9.27l6.91-1.01L12 2z" />
                        </svg>
                    }
                </div>
                <p class="text-gray-600">Average Rating</p>
            </div>
            <div class="bg-white p-6 rounded-lg shadow text-center">
                <div class="text-4xl font-bold text-amber-600 mb-2">247</div>
                <p class="text-gray-600">Total Reviews</p>
            </div>
            <div class="bg-white p-6 rounded-lg shadow text-center">
                <div class="text-4xl font-bold text-amber-600 mb-2">98%</div>
                <p class="text-gray-600">Would Recommend</p>
            </div>
        </div>

        <!-- Reviews Grid -->
        <div class="grid lg:grid-cols-2 gap-8">

            <!-- Review 1 -->
            <div class="bg-white p-6 rounded-lg shadow hover:shadow-lg transition-shadow">
                <div class="flex items-start justify-between mb-4">
                    <div class="flex items-center space-x-3">
                        <div class="w-12 h-12 bg-amber-100 rounded-full flex items-center justify-center">
                            <svg class="h-6 w-6 text-amber-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                            </svg>
                        </div>
                        <div>
                            <h3 class="font-semibold">Sarah Johnson</h3>
                            <p class="text-sm text-gray-500">United Kingdom</p>
                        </div>
                    </div>
                    <div class="text-right">
                        <div class="flex items-center space-x-1 mb-1">
                            @for (int i = 0; i < 5; i++)
                            {
                                <svg class="h-4 w-4 text-yellow-400 fill-current" viewBox="0 0 24 24">
                                    <path d="M12 2l3.09 6.26L22 9.27l-5 4.87
                                        1.18 6.88L12 17.77l-6.18 3.25L7 14.14
                                        2 9.27l6.91-1.01L12 2z" />
                                </svg>
                            }
                        </div>
                        <div class="text-sm text-gray-500">November 2024</div>
                    </div>
                </div>
                <div class="mb-4">
                    <h4 class="font-semibold text-lg mb-2">Exceptional Experience</h4>
                    <p class="text-gray-600 pl-4">Grand Hotel Petrich exceeded all expectations. The staff was incredibly welcoming, the rooms were immaculate, and the spa was absolutely divine.</p>
                </div>
                <div class="flex items-center text-sm text-green-600">
                    <div class="w-2 h-2 bg-green-600 rounded-full mr-2"></div>
                    Verified Stay
                </div>
            </div>

            <!-- Review 2 -->
            <div class="bg-white p-6 rounded-lg shadow hover:shadow-lg transition-shadow">
                <div class="flex items-start justify-between mb-4">
                    <div class="flex items-center space-x-3">
                        <div class="w-12 h-12 bg-amber-100 rounded-full flex items-center justify-center">
                            <svg class="h-6 w-6 text-amber-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                            </svg>
                        </div>
                        <div>
                            <h3 class="font-semibold">Marco Rossi</h3>
                            <p class="text-sm text-gray-500">Italy</p>
                        </div>
                    </div>
                    <div class="text-right">
                        <div class="flex items-center space-x-1 mb-1">
                            @for (int i = 0; i < 5; i++)
                            {
                                <svg class="h-4 w-4 text-yellow-400 fill-current" viewBox="0 0 24 24">
                                    <path d="M12 2l3.09 6.26L22 9.27l-5 4.87
                                        1.18 6.88L12 17.77l-6.18 3.25L7 14.14
                                        2 9.27l6.91-1.01L12 2z" />
                                </svg>
                            }
                        </div>
                        <div class="text-sm text-gray-500">October 2024</div>
                    </div>
                </div>
                <div class="mb-4">
                    <h4 class="font-semibold text-lg mb-2">Perfect Business Stay</h4>
                    <p class="text-gray-600 pl-4">As a frequent business traveler, I can confidently say this hotel sets the standard. The business center is well-equipped and WiFi is excellent.</p>
                </div>
                <div class="flex items-center text-sm text-green-600">
                    <div class="w-2 h-2 bg-green-600 rounded-full mr-2"></div>
                    Verified Stay
                </div>
            </div>

        </div>
    </div>
</section>
