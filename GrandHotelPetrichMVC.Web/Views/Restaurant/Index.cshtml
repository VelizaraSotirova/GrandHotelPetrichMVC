@{
    ViewData["Title"] = "Restaurant";
}

<!-- Hero Section -->
<section class="pt-20 pb-12 bg-gradient-to-r from-amber-50 to-amber-100">
    <div class="container mx-auto px-4 text-center">
        <h1 class="text-5xl font-bold mb-4 font-serif text-amber-900">Restaurant</h1>
        <p class="text-xl text-amber-800 max-w-3xl mx-auto">
            Experience exquisite cuisine in our elegant restaurant featuring both international and traditional Bulgarian dishes.
        </p>
    </div>
</section>

<!-- Restaurant Info -->
<section class="py-16">
    <div class="container mx-auto px-4">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
            <div>
                <h2 class="text-4xl font-bold mb-6 font-serif">Fine Dining Experience</h2>
                <p class="text-gray-600 mb-6 text-lg">
                    Our restaurant offers a sophisticated dining experience with carefully crafted menus that celebrate both local Bulgarian traditions and international culinary excellence.
                </p>

                <div class="grid grid-cols-2 gap-6">
                    <div class="flex items-center space-x-3">
                        <svg class="h-8 w-8 text-amber-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        <div>
                            <div class="font-semibold">Opening Hours</div>
                            <div class="text-gray-600">6:00 AM - 10:30 PM</div>
                        </div>
                    </div>

                    <div class="flex items-center space-x-3">
                        <svg class="h-8 w-8 text-amber-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                        </svg>
                        <div>
                            <div class="font-semibold">Capacity</div>
                            <div class="text-gray-600">120 guests</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="grid grid-cols-2 gap-4">
                <div class="h-48 bg-cover bg-center rounded-lg" style="background-image: url('https://images.unsplash.com/photo-1517248135467-4c7edcad34c4?q=80&w=870&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D')"></div>
                <div class="h-48 bg-cover bg-center rounded-lg" style="background-image: url('https://plus.unsplash.com/premium_photo-1673108852141-e8c3c22a4a22?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MjV8fHJlc3RhdXJhbnR8ZW58MHx8MHx8fDA%3D')"></div>
                <div class="h-48 bg-cover bg-center rounded-lg col-span-2" style="background-image: url('https://images.unsplash.com/photo-1515936185222-2223551e65e0?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTB8fGJ1ZmZldHxlbnwwfHwwfHx8MA%3D%3D')"></div>
            </div>
        </div>
    </div>
</section>

<!-- Menu Section -->
<section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
        <div class="text-center mb-12">
            <h2 class="text-4xl font-bold mb-4 font-serif">Our Menu</h2>
            <p class="text-gray-600 max-w-2xl mx-auto">
                Discover our carefully curated selection of dishes, featuring fresh local ingredients and international flavors.
            </p>
        </div>

        <div class="space-y-12">
            <div>
                <div class="flex items-center justify-between mb-6">
                    <h3 class="text-3xl font-bold text-amber-900 font-serif">Breakfast Buffet</h3>
                    <span class="px-3 py-1 border border-amber-300 text-amber-700 rounded-full text-sm">6:00 AM - 10:30 AM</span>
                </div>

                <div class="grid md:grid-cols-2 gap-6">
                    <div class="bg-white p-6 rounded-lg shadow hover:shadow-lg transition-shadow">
                        <div class="flex justify-between items-start mb-3">
                            <h4 class="text-xl font-semibold text-gray-900">Continental Breakfast</h4>
                            <span class="text-xl font-bold text-amber-600">€15</span>
                        </div>
                        <p class="text-gray-600">Fresh pastries, fruits, yogurt, and cereals</p>
                    </div>

                    <div class="bg-white p-6 rounded-lg shadow hover:shadow-lg transition-shadow">
                        <div class="flex justify-between items-start mb-3">
                            <h4 class="text-xl font-semibold text-gray-900">Bulgarian Breakfast</h4>
                            <span class="text-xl font-bold text-amber-600">€18</span>
                        </div>
                        <p class="text-gray-600">Traditional banitsa, kashkaval, tomatoes, and cucumbers</p>
                    </div>
                </div>
            </div>

            <div>
                <div class="flex items-center justify-between mb-6">
                    <h3 class="text-3xl font-bold text-amber-900 font-serif">Lunch & Dinner</h3>
                    <span class="px-3 py-1 border border-amber-300 text-amber-700 rounded-full text-sm">12:00 PM - 10:00 PM</span>
                </div>

                <div class="grid md:grid-cols-2 gap-6">
                    <div class="bg-white p-6 rounded-lg shadow hover:shadow-lg transition-shadow">
                        <div class="flex justify-between items-start mb-3">
                            <h4 class="text-xl font-semibold text-gray-900">Grilled Salmon</h4>
                            <span class="text-xl font-bold text-amber-600">€28</span>
                        </div>
                        <p class="text-gray-600">Atlantic salmon with seasonal vegetables and lemon sauce</p>
                    </div>

                    <div class="bg-white p-6 rounded-lg shadow hover:shadow-lg transition-shadow">
                        <div class="flex justify-between items-start mb-3">
                            <h4 class="text-xl font-semibold text-gray-900">Bulgarian Lamb</h4>
                            <span class="text-xl font-bold text-amber-600">€32</span>
                        </div>
                        <p class="text-gray-600">Slow-cooked lamb with traditional herbs and red wine</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
