@{
    ViewData["Title"] = "Hotel Amenities";
}

<!-- Hero Section -->
<section class="pt-20 pb-12 bg-gradient-to-r from-amber-50 to-amber-100">
    <div class="container mx-auto px-4">
        <div class="text-center">
            <h1 class="text-5xl font-bold mb-4 font-serif text-amber-900">Hotel Amenities</h1>
            <p class="text-xl text-amber-800 max-w-3xl mx-auto">
                Discover our comprehensive range of luxury amenities designed to enhance your stay and provide ultimate comfort and relaxation.
            </p>
        </div>
    </div>
</section>

<!-- Main Amenities -->
<section class="py-16">
    <div class="container mx-auto px-4">
        <div class="space-y-16">
            <!-- Swimming Pool & Spa -->
            <div class="grid lg:grid-cols-2 gap-12 items-center">
                <div>
                    <div class="flex items-center mb-6">
                        <div class="w-16 h-16 bg-amber-100 rounded-full flex items-center justify-center mr-4">
                            <svg class="h-8 w-8 text-amber-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M14.828 14.828a4 4 0 01-5.656 0M9 10h1m4 0h1m-6 4h.01M19 10a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                        </div>
                        <div>
                            <h2 class="text-3xl font-bold font-serif text-gray-900">Swimming Pool & Spa</h2>
                            <p class="text-amber-600 font-semibold">6:00 AM - 10:00 PM</p>
                        </div>
                    </div>

                    <p class="text-gray-600 mb-6 text-lg">
                        Relax in our heated indoor pool or indulge in rejuvenating spa treatments with professional therapists.
                    </p>

                    <div class="mb-6">
                        <h3 class="text-xl font-semibold mb-3">Features:</h3>
                        <ul class="space-y-2">
                            <li class="flex items-center">
                                <div class="w-2 h-2 bg-amber-600 rounded-full mr-3"></div>
                                <span class="text-gray-700">Heated Indoor Pool</span>
                            </li>
                            <li class="flex items-center">
                                <div class="w-2 h-2 bg-amber-600 rounded-full mr-3"></div>
                                <span class="text-gray-700">Sauna & Steam Room</span>
                            </li>
                            <li class="flex items-center">
                                <div class="w-2 h-2 bg-amber-600 rounded-full mr-3"></div>
                                <span class="text-gray-700">Massage Therapy</span>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="h-96 bg-cover bg-center rounded-lg shadow-lg"
                     style="background-image: url('https://images.unsplash.com/photo-1566073771259-6a8506099945?auto=format&fit=crop&w=800&q=80')">
                </div>
            </div>

            <!-- Fitness Center -->
            <div class="grid lg:grid-cols-2 gap-12 items-center">
                <div class="lg:order-2">
                    <div class="flex items-center mb-6">
                        <div class="w-16 h-16 bg-amber-100 rounded-full flex items-center justify-center mr-4">
                            <svg class="h-8 w-8 text-amber-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M13 10V3L4 14h7v7l9-11h-7z" />
                            </svg>
                        </div>
                        <div>
                            <h2 class="text-3xl font-bold font-serif text-gray-900">Fitness Center</h2>
                            <p class="text-amber-600 font-semibold">24/7 Access</p>
                        </div>
                    </div>

                    <p class="text-gray-600 mb-6 text-lg">
                        Stay active in our fully equipped fitness center with modern equipment and personal training available.
                    </p>

                    <div class="mb-6">
                        <h3 class="text-xl font-semibold mb-3">Features:</h3>
                        <ul class="space-y-2">
                            <li class="flex items-center">
                                <div class="w-2 h-2 bg-amber-600 rounded-full mr-3"></div>
                                <span class="text-gray-700">Cardio Equipment</span>
                            </li>
                            <li class="flex items-center">
                                <div class="w-2 h-2 bg-amber-600 rounded-full mr-3"></div>
                                <span class="text-gray-700">Weight Training</span>
                            </li>
                            <li class="flex items-center">
                                <div class="w-2 h-2 bg-amber-600 rounded-full mr-3"></div>
                                <span class="text-gray-700">Personal Trainer</span>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="lg:order-1 h-96 bg-cover bg-center rounded-lg shadow-lg"
                     style="background-image: url('https://images.unsplash.com/photo-1571902943202-507ec2618e8f?auto=format&fit=crop&w=800&q=80')">
                </div>
            </div>
        </div>
    </div>
</section>
