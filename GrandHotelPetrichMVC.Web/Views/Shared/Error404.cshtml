@using GrandHotelPetrichMVC.ViewModels
@model ErrorViewModel
@{
    ViewData["Title"] = "Page Not Found";
}

<section class="min-h-screen bg-amber-50 flex items-center justify-center">
    <div class="text-center px-6 py-12 max-w-2xl">
        <h1 class="text-6xl font-bold text-amber-800 mb-4">404</h1>
        <h2 class="text-2xl font-semibold text-amber-700 mb-4">Oops! Page not found</h2>
        <p class="text-gray-600 mb-6">
            We can't seem to find the page you're looking for. It may have been moved, deleted, or never existed.
        </p>

        <a href="~/"
           class="inline-block px-6 py-3 bg-amber-600 text-white font-medium rounded-md shadow hover:bg-amber-700 transition duration-300">
            Return to Homepage
        </a>
    </div>
</section>

