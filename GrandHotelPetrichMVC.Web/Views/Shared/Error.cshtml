@using GrandHotelPetrichMVC.ViewModels
@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<h1 class="text-danger">Error.</h1>
<h2 class="text-danger">An error occurred while processing your request.</h2>

<section class="pt-28 pb-16 bg-gray-100 min-h-[calc(100vh-200px)]">
    <div class="container mx-auto text-center px-4">
        <h1 class="text-6xl font-bold text-red-600 mb-4">Oops!</h1>
        <h2 class="text-2xl text-gray-800 mb-6">An unexpected error occurred.</h2>

        @if (Model != null && Model.ShowRequestId)
        {
            <p class="text-sm text-gray-500 mb-6">
                Request ID: <code>@Model.RequestId</code>
            </p>
        }

        <a href="/" class="inline-block px-6 py-3 bg-amber-600 text-white rounded hover:bg-amber-700 transition">
            Go back to Home
        </a>
    </div>
</section>