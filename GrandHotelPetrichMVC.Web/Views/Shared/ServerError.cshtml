@using GrandHotelPetrichMVC.ViewModels
@model ErrorViewModel
@{
    ViewData["Title"] = "Server Error";
}

<section class="min-h-screen bg-amber-50 flex items-center justify-center">
    <div class="text-center px-6 py-12 max-w-2xl">
        <h1 class="text-6xl font-bold text-amber-800 mb-4">500</h1>
        <h2 class="text-2xl font-semibold text-amber-700 mb-4">Something went wrong</h2>
        <p class="text-gray-600 mb-6">
            An unexpected error occurred on our server. We’re working to fix it as soon as possible.
        </p>

        <a href="~/"
           class="inline-block px-6 py-3 bg-amber-600 text-white font-medium rounded-md shadow hover:bg-amber-700 transition duration-300">
            Return to Homepage
        </a>
    </div>
</section>
