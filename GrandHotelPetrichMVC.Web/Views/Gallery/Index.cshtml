@using GrandHotelPetrichMVC.ViewModels.Admin.Gallery
@model IEnumerable<GalleryImageViewModel>
@{
    ViewData["Title"] = "Gallery";
}

<!-- Hero Section -->
<section class="pt-20 pb-12 bg-gradient-to-r from-amber-50 to-amber-100">
    <div class="container mx-auto px-4">
        <div class="text-center">
            <h1 class="text-5xl font-bold mb-4 font-serif text-amber-900">Photo Gallery</h1>
            <p class="text-xl text-amber-800 max-w-3xl mx-auto">
                Explore the beauty and elegance of Grand Hotel Petrich through our stunning photo collection.
            </p>
        </div>
    </div>
</section>

<!-- Filter Buttons -->
<section class="py-8">
    <div class="container mx-auto px-4">
        <div class="flex flex-wrap gap-4 justify-center">
            <button class="filter-btn px-4 py-2 bg-amber-600 text-white rounded hover:bg-amber-700" data-filter="all">All Photos</button>
            <button class="filter-btn px-4 py-2 border border-gray-300 text-gray-700 rounded hover:bg-gray-50" data-filter="suite">Rooms & Suites</button>
            <button class="filter-btn px-4 py-2 border border-gray-300 text-gray-700 rounded hover:bg-gray-50" data-filter="restaurant">Restaurant</button>
            <button class="filter-btn px-4 py-2 border border-gray-300 text-gray-700 rounded hover:bg-gray-50" data-filter="lobby">Lobby</button>
            <button class="filter-btn px-4 py-2 border border-gray-300 text-gray-700 rounded hover:bg-gray-50" data-filter="spa">Spa</button>
            <button class="filter-btn px-4 py-2 border border-gray-300 text-gray-700 rounded hover:bg-gray-50" data-filter="pool">Pool</button>
        </div>
    </div>
</section>

<!-- Image Grid -->
<section class="pb-16">
    <div class="container mx-auto px-4">
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">

            <div class="gallery-item category-lobby">
                <img src="https://plus.unsplash.com/premium_photo-1661964301291-75df9dd37f23?q=80&w=774&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
                     alt="Elegant Hotel Lobby"
                     class="w-full h-64 object-cover transition-transform group-hover:scale-105" />
                <div class="p-4">
                    <h3 class="font-semibold text-lg mb-2">Elegant Hotel Lobby</h3>
                    <p class="text-gray-600 text-sm">Our grand lobby welcomes guests with luxury and comfort</p>
                </div>
            </div>

            <div class="gallery-item category-suite">
                <img src="https://images.unsplash.com/photo-1512918728675-ed5a9ecdebfd?q=80&w=870&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
                     alt="Deluxe Suite"
                     class="w-full h-64 object-cover transition-transform group-hover:scale-105" />
                <div class="p-4">
                    <h3 class="font-semibold text-lg mb-2">Deluxe Suite</h3>
                    <p class="text-gray-600 text-sm">Spacious and elegantly furnished deluxe suite</p>
                </div>
            </div>

            <div class="gallery-item category-restaurant">
                <img src="https://images.unsplash.com/photo-1517248135467-4c7edcad34c4?q=80&w=870&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
                     alt="Fine Dining Restaurant"
                     class="w-full h-64 object-cover transition-transform group-hover:scale-105" />
                <div class="p-4">
                    <h3 class="font-semibold text-lg mb-2">Fine Dining Restaurant</h3>
                    <p class="text-gray-600 text-sm">Exquisite dining experience with international cuisine</p>
                </div>
            </div>

            <div class="gallery-item category-spa">
                <img src="https://images.unsplash.com/photo-1571896349842-33c89424de2d?auto=format&fit=crop&w=800&q=80"
                     alt="Relaxing Spa"
                     class="w-full h-64 object-cover transition-transform group-hover:scale-105" />
                <div class="p-4">
                    <h3 class="font-semibold text-lg mb-2">Relaxing Spa</h3>
                    <p class="text-gray-600 text-sm">Unwind and rejuvenate in our luxury spa facilities</p>
                </div>
            </div>

            <div class="gallery-item category-pool">
                <img src="https://images.unsplash.com/photo-1692855009814-2dc08e2e9a5a?q=80&w=875&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
                     alt="Outdoor Pool"
                     class="w-full h-64 object-cover transition-transform group-hover:scale-105" />
                <div class="p-4">
                    <h3 class="font-semibold text-lg mb-2">Outdoor Pool</h3>
                    <p class="text-gray-600 text-sm">Crystal clear pool with stunning mountain views</p>
                </div>
            </div>

            <div class="gallery-item category-suite">
                <img src="https://images.unsplash.com/photo-1582719478250-c89cae4dc85b?auto=format&fit=crop&w=800&q=80"
                     alt="Executive Suite"
                     class="w-full h-64 object-cover transition-transform group-hover:scale-105" />
                <div class="p-4">
                    <h3 class="font-semibold text-lg mb-2">Executive Suite</h3>
                    <p class="text-gray-600 text-sm">Our premium executive suite with city views</p>
                </div>
            </div>

            @foreach (var photo in Model)
            {
                <div class="gallery-item category-@photo.Title.ToLower().Replace(" ", "")">
                    <img src="@photo.ImageUrl"
                         alt="@photo.Title"
                         class="w-full h-64 object-cover transition-transform group-hover:scale-105" />
                    <div class="p-4">
                        <h3 class="font-semibold text-lg mb-2">@photo.Title</h3>
                        <p class="text-gray-600 text-sm">@photo.Description</p>
                    </div>
                </div>
            }

        </div>
    </div>
</section>

<!-- 3. Client-Side Filtering Script -->
@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const buttons = document.querySelectorAll(".filter-btn");
            const items = document.querySelectorAll(".gallery-item");

            buttons.forEach(button => {
                button.addEventListener("click", () => {
                    const filter = button.getAttribute("data-filter");

                    // Toggle button active style
                    buttons.forEach(btn => {
                        btn.classList.remove("bg-amber-500", "text-white");
                        btn.classList.add("bg-gray-200", "text-black");
                    });
                    button.classList.remove("bg-gray-200", "text-black");
                    button.classList.add("bg-amber-500", "text-white");

                    // Filter logic
                    items.forEach(item => {
                        if (filter === "all") {
                            item.classList.remove("hidden");
                        } else if (item.classList.contains(`category-${filter}`)) {
                            item.classList.remove("hidden");
                        } else {
                            item.classList.add("hidden");
                        }
                    });
                });
            });
        });
    </script>
}