@model GrandHotelPetrichMVC.ViewModels.ContactMessageFormViewModel

@{
    ViewData["Title"] = "Contact Us";
}

<!-- Hero Section -->
<section class="pt-20 pb-12 bg-gradient-to-r from-amber-50 to-amber-100">
    <div class="container mx-auto px-4">
        <div class="text-center">
            <h1 class="text-5xl font-bold mb-4 font-serif text-amber-900">Contact Us</h1>
            <p class="text-xl text-amber-800 max-w-3xl mx-auto">
                We're here to help make your stay memorable. Get in touch with our friendly team.
            </p>
        </div>
    </div>
</section>

<!-- Contact Information -->
<section class="py-16">
    <div class="container mx-auto px-4">
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8 mb-16">
            @* Address *@
            <div class="bg-white p-6 rounded-lg shadow text-center hover:shadow-lg transition-shadow">
                <div class="w-16 h-16 bg-amber-100 rounded-full flex items-center justify-center mx-auto mb-4">
                    <svg class="h-8 w-8 text-amber-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                </div>
                <h3 class="text-xl font-semibold mb-3">Address</h3>
                <p class="text-gray-600">123 Central Street</p>
                <p class="text-gray-600">Petrich, Bulgaria 2850</p>
            </div>

            @* Phone *@
            <div class="bg-white p-6 rounded-lg shadow text-center hover:shadow-lg transition-shadow">
                <div class="w-16 h-16 bg-amber-100 rounded-full flex items-center justify-center mx-auto mb-4">
                    <svg class="h-8 w-8 text-amber-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                    </svg>
                </div>
                <h3 class="text-xl font-semibold mb-3">Phone</h3>
                <p class="text-gray-600">+359 888 123 456</p>
                <p class="text-gray-600">+359 888 123 457</p>
            </div>

            @* Email *@
            <div class="bg-white p-6 rounded-lg shadow text-center hover:shadow-lg transition-shadow">
                <div class="w-16 h-16 bg-amber-100 rounded-full flex items-center justify-center mx-auto mb-4">
                    <svg class="h-8 w-8 text-amber-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                </div>
                <h3 class="text-xl font-semibold mb-3">Email</h3>
                <p class="text-gray-600">info@grandhotelpetrich.bg</p>
                <p class="text-gray-600">reservations@grandhotelpetrich.bg</p>
            </div>

            @* Reception *@
            <div class="bg-white p-6 rounded-lg shadow text-center hover:shadow-lg transition-shadow">
                <div class="w-16 h-16 bg-amber-100 rounded-full flex items-center justify-center mx-auto mb-4">
                    <svg class="h-8 w-8 text-amber-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </div>
                <h3 class="text-xl font-semibold mb-3">Reception Hours</h3>
                <p class="text-gray-600">24/7 Front Desk</p>
                <p class="text-gray-600">Concierge: 8:00 AM - 10:00 PM</p>
            </div>
        </div>

        <!-- Contact Form -->
        <div class="grid lg:grid-cols-2 gap-12">
            <div class="bg-white p-8 rounded-lg shadow">
                <h2 class="text-2xl font-bold font-serif mb-6">Send us a Message</h2>

                @if (TempData["Success"] != null)
                {
                    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
                        @TempData["Success"]
                    </div>
                }

                @* Validation summary *@
                <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm mb-4"></div>

                <form method="post" asp-action="Submit" novalidate>
                    <div class="grid md:grid-cols-2 gap-4">
                        <div>
                            <label for="Name" class="block text-sm font-medium mb-2">Full Name *</label>
                            <input id="Name" name="Name" type="text" required class="form-input" placeholder="Your full name" />
                            <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
                        </div>
                        <div>
                            <label for="Email" class="block text-sm font-medium mb-2">Email *</label>
                            <input id="Email" name="Email" type="email" required class="form-input" placeholder="your.email@example.com" />
                            <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
                        </div>
                    </div>

                    <div class="grid md:grid-cols-2 gap-4">
                        <div>
                            <label for="Phone" class="block text-sm font-medium mb-2">Phone Number</label>
                            <input id="Phone" name="Phone" type="tel" class="form-input" placeholder="+359 888 123 456" />
                            <span asp-validation-for="Phone" class="text-red-500 text-sm"></span>
                        </div>
                        <div>
                            <label for="Subject" class="block text-sm font-medium mb-2">Subject *</label>
                            <input id="Subject" name="Subject" type="text" required class="form-input" placeholder="How can we help?" />
                            <span asp-validation-for="Subject" class="text-red-500 text-sm"></span>
                        </div>
                    </div>

                    <div>
                        <label for="Message" class="block text-sm font-medium mb-2">Message *</label>
                        <textarea id="Message" name="Message" required rows="5" class="form-input" placeholder="Tell us more about your inquiry..."></textarea>
                        <span asp-validation-for="Message" class="text-red-500 text-sm"></span>
                    </div>

                    <button type="submit" class="w-full px-6 py-3 bg-amber-600 text-white rounded-md hover:bg-amber-700 font-medium">
                        Send Message
                    </button>
                </form>

            </div>

            <!-- Map -->
            <div class="space-y-6">
                <div class="bg-white p-6 rounded-lg shadow">
                    <h3 class="text-2xl font-bold font-serif mb-4">Location</h3>
                    <div class="bg-gray-200 h-64 rounded-lg flex items-center justify-center mb-4">
                        <p class="text-gray-500">Interactive Map Placeholder</p>
                    </div>
                    <p class="text-gray-600 mb-4">
                        Located in the heart of Petrich, our hotel is easily accessible from major transportation hubs and local attractions.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<input class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-amber-500" />

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}