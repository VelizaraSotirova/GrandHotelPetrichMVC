@model GrandHotelPetrichMVC.ViewModels.Admin.Room.RoomCreateViewModel
@{
    ViewData["Title"] = "Create Room";
}
<section class="pt-20 max-w-3xl mx-auto">
    <h2 class="text-2xl font-bold mb-6">Create Room</h2>
    <form asp-action="Create" method="post">
        <partial name="_RoomForm" />

        <div>
            <label for="amenities">Select Amenities</label>
            <select asp-for="SelectedAmenityIds" asp-items="Model.AvailableAmenities" class="form-select w-full" multiple></select>
        </div>

        <div class="mt-4">
            <button type="submit" class="bg-amber-600 text-white px-6 py-2 rounded hover:bg-amber-700">
                Save Room
            </button>
        </div>

    </form>
</section>
