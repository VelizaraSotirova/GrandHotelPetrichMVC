@using GrandHotelPetrichMVC.ViewModels.Admin.Amenity
@model AddAmenityViewModel

@{
    ViewData["Title"] = "Add Amenity";
}

<section class="pt-24 max-w-md mx-auto">
    <h2 class="text-2xl font-semibold mb-4">Add New Amenity</h2>

    <form asp-action="Add" method="post">
        <div class="mb-4">
            <label asp-for="Name" class="block font-semibold mb-1">Amenity Name</label>
            <input asp-for="Name" class="form-input w-full" />
            <span asp-validation-for="Name" class="text-sm text-red-600"></span>
        </div>

        <button type="submit" class="bg-amber-600 text-white px-4 py-2 rounded hover:bg-amber-700">
            Save
        </button>
    </form>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
