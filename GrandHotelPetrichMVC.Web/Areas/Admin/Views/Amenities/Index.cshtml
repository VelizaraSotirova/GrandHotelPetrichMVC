@using GrandHotelPetrichMVC.ViewModels.Admin.Amenity
@model List<AmenityViewModel>

@{
    ViewData["Title"] = "Manage Amenities";
}

<section class="pt-24 max-w-3xl mx-auto">
    <h1 class="text-2xl font-bold mb-4">Manage Amenities</h1>

    <a asp-action="Add" class="mb-4 inline-block bg-amber-600 text-white px-4 py-2 rounded hover:bg-amber-700">
        + Add Amenity
    </a>

    <table class="table-auto w-full bg-white shadow rounded">
        <thead class="bg-amber-100">
            <tr>
                <th class="px-4 py-2 text-left">Amenity</th>
                <th class="px-4 py-2">Status</th>
                <th class="px-4 py-2">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="border-t">
                    <td class="px-4 py-2">@item.Name</td>
                    <td class="px-4 py-2">@((item.IsActive ? "Active" : "Inactive"))</td>
                    <td class="px-4 py-2">
                        @if (item.IsActive)
                        {
                            <form asp-action="Deactivate" method="post" style="display:inline">
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="text-sm bg-red-500 text-white px-3 py-1 rounded hover:bg-red-600">
                                    Deactivate
                                </button>
                            </form>
                        }
                        else
                        {
                            <form asp-action="Activate" method="post" style="display:inline">
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="text-sm bg-green-600 text-white px-3 py-1 rounded hover:bg-green-700">
                                    Activate
                                </button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>
