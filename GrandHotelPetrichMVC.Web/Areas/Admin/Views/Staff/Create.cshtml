@using GrandHotelPetrichMVC.ViewModels.Admin.Staff
@model CreateStaffViewModel
@{
    ViewData["Title"] = "Add New Staff";
}

<section class="container mx-auto px-4 pt-20 max-w-xl">
    <h2 class="text-2xl font-bold mb-6 text-gray-800">Create New Staff Member</h2>

    <form method="post" class="space-y-6">
        <div>
            <label asp-for="UserEmail" class="block text-sm font-medium mb-1">User Email</label>
            <input asp-for="UserEmail" class="w-full border rounded px-3 py-2" placeholder="Existing user email" />
            <span asp-validation-for="UserEmail" class="text-red-600 text-sm"></span>
        </div>

        <div>
            <label asp-for="Role" class="block text-sm font-medium mb-1">Staff Role</label>
            <select asp-for="Role" asp-items="Html.GetEnumSelectList<GrandHotelPetrichMVC.GCommon.Enums.StaffRole>()" class="w-full border rounded px-3 py-2"></select>
            <span asp-validation-for="Role" class="text-red-600 text-sm"></span>
        </div>

        <div>
            <label asp-for="Shift" class="block text-sm font-medium mb-1">Shift</label>
            <select asp-for="Shift" asp-items="Html.GetEnumSelectList<GrandHotelPetrichMVC.GCommon.Enums.StaffShifts>()" class="w-full border rounded px-3 py-2"></select>
            <span asp-validation-for="Shift" class="text-red-600 text-sm"></span>
        </div>

        <div>
            <label asp-for="Salary" class="block text-sm font-medium mb-1">Salary</label>
            <input asp-for="Salary" class="w-full border rounded px-3 py-2" placeholder="e.g. 2500.00" />
            <span asp-validation-for="Salary" class="text-red-600 text-sm"></span>
        </div>

        <button type="submit" class="w-full bg-amber-600 hover:bg-amber-700 text-white font-semibold py-2 rounded">
            Create Staff
        </button>
    </form>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

