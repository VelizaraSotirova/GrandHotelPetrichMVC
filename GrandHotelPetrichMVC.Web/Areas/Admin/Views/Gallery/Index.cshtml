@using GrandHotelPetrichMVC.ViewModels.Admin.Gallery
@model List<GalleryImageViewModel>

@{
    ViewData["Title"] = "Gallery";
}

<section class="pt-24 pb-8">
    <div class="container mx-auto">
        <div class="flex justify-between items-center mb-6">
            <h2 class="text-2xl font-semibold">Gallery</h2>
            <a asp-action="Upload" class="bg-amber-600 text-white px-4 py-2 rounded hover:bg-amber-700">+ Upload New</a>
        </div>

        @if (TempData["Success"] != null)
        {
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-2 rounded mb-4">
                @TempData["Success"]
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-2 rounded mb-4">
                @TempData["Error"]
            </div>
        }

        @if (!Model.Any())
        {
            <p class="text-gray-600">No images uploaded yet.</p>
        }
        else
        {
            <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 gap-6">
                @foreach (var image in Model)
                {
                    <div class="bg-white shadow rounded p-2">
                        <img src="@image.ImageUrl" class="w-full h-40 object-cover rounded mb-2" />
                        @if (!string.IsNullOrEmpty(image.Description))
                        {
                            <p class="text-gray-700 text-sm mt-1">@image.Description</p>
                        }

                        <form asp-action="Delete" method="post">
                            <input type="hidden" name="id" value="@image.Id" />
                            <button type="submit" class="text-red-600 hover:underline text-sm">Delete</button>
                        </form>
                    </div>
                }
            </div>
        }
    </div>
</section>
