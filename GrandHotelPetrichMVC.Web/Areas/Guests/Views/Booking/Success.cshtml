@model GrandHotelPetrichMVC.ViewModels.Guests.Booking.BookingSuccessViewModel

@{
    ViewData["Title"] = "Booking Confirmed";
}

<section class="pt-20 pb-12 bg-gradient-to-r from-amber-50 to-amber-100">
    <div class="container mx-auto px-4 text-center">
        <h1 class="text-4xl font-bold text-amber-800 mb-4 font-serif">Booking Confirmed</h1>
        <p class="text-lg text-gray-700">Thank you for choosing Grand Hotel Petrich!</p>
    </div>
</section>

<section class="py-16">
    <div class="container mx-auto px-4 max-w-2xl">
        <div class="bg-white shadow-md rounded-lg p-8">
            <h2 class="text-2xl font-bold text-amber-700 mb-6 font-serif text-center">Reservation Details</h2>

            <dl class="grid grid-cols-1 md:grid-cols-2 gap-6 text-gray-800 text-sm">
                <div>
                    <dt class="font-semibold">Booking ID:</dt>
                    <dd>@Model.BookingId</dd>
                </div>
                <div>
                    <dt class="font-semibold">Room:</dt>
                    <dd>@Model.RoomName</dd>
                </div>
                <div>
                    <dt class="font-semibold">Check-in Date:</dt>
                    <dd>@Model.CheckInDate.ToString("dddd, MMM dd yyyy")</dd>
                </div>
                <div>
                    <dt class="font-semibold">Check-out Date:</dt>
                    <dd>@Model.CheckOutDate.ToString("dddd, MMM dd yyyy")</dd>
                </div>
                <div>
                    <dt class="font-semibold">Total Amount:</dt>
                    <dd>€@Model.TotalAmount.ToString("F2")</dd>
                </div>
                <div>
                    <dt class="font-semibold">Payment Method:</dt>
                    <dd>@Model.PaymentMethod</dd>
                </div>
                <div>
                    <dt class="font-semibold">Booking Status:</dt>
                    <dd class="text-green-700 font-semibold">@Model.BookingStatus</dd>
                </div>
            </dl>

            <div class="mt-8 text-center">
                <a asp-area="" asp-controller="Home" asp-action="Index"
                   class="inline-block bg-amber-600 hover:bg-amber-700 text-white font-medium px-6 py-3 rounded shadow">
                    Back to Home
                </a>
            </div>
        </div>
    </div>
</section>
