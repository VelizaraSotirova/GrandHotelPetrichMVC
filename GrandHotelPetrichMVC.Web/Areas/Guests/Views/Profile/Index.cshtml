@model GrandHotelPetrichMVC.ViewModels.Guests.Profile.ProfileViewModel
@{
    ViewData["Title"] = "Edit Profile";
}

<section class="py-20 bg-gradient-to-r from-amber-50 to-amber-100">
    <div class="container mx-auto max-w-2xl px-4">
        <div class="bg-white shadow-xl rounded-xl p-8">
            <h2 class="text-3xl font-serif font-bold text-amber-800 mb-6 flex items-center gap-2">
                <svg class="w-6 h-6 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M15 12H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                My Profile
            </h2>

            @if (TempData["Success"] != null)
            {
                <div class="mb-4 p-3 bg-green-100 text-green-800 rounded">
                    @TempData["Success"]
                </div>
            }

            <form asp-action="Index" method="post" class="space-y-6">
                @Html.AntiForgeryToken()

                <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                    <div>
                        <label asp-for="FirstName" class="block text-sm font-semibold text-gray-700 mb-1">First Name</label>
                        <input asp-for="FirstName" class="w-full border border-gray-300 px-4 py-2 rounded-md focus:ring-2 focus:ring-amber-500 focus:outline-none" />
                        <span asp-validation-for="FirstName" class="text-sm text-red-500"></span>
                    </div>

                    <div>
                        <label asp-for="LastName" class="block text-sm font-semibold text-gray-700 mb-1">Last Name</label>
                        <input asp-for="LastName" class="w-full border border-gray-300 px-4 py-2 rounded-md focus:ring-2 focus:ring-amber-500 focus:outline-none" />
                        <span asp-validation-for="LastName" class="text-sm text-red-500"></span>
                    </div>
                </div>

                <div>
                    <label asp-for="Email" class="block text-sm font-semibold text-gray-700 mb-1">Email</label>
                    <input asp-for="Email" readonly class="w-full border border-gray-200 bg-gray-100 text-gray-600 px-4 py-2 rounded-md cursor-not-allowed" />
                </div>

                <div>
                    <label asp-for="PhoneNumber" class="block text-sm font-semibold text-gray-700 mb-1">Phone Number</label>
                    <input asp-for="PhoneNumber" class="w-full border border-gray-300 px-4 py-2 rounded-md focus:ring-2 focus:ring-amber-500 focus:outline-none" />
                </div>

                <div>
                    <label asp-for="Address" class="block text-sm font-semibold text-gray-700 mb-1">Address</label>
                    <textarea asp-for="Address" rows="3" class="w-full border border-gray-300 px-4 py-2 rounded-md focus:ring-2 focus:ring-amber-500 focus:outline-none"></textarea>
                </div>

                <div class="flex justify-end space-x-4 pt-6">
                    <a asp-controller="Home" asp-action="Index" class="px-6 py-2 text-gray-700 border border-gray-300 rounded hover:bg-gray-100">Cancel</a>
                    <button type="submit" class="px-6 py-2 bg-amber-600 text-white font-medium rounded-md hover:bg-amber-700 transition">
                        Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
