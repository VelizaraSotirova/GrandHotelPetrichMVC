@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<section class="pt-20 pb-16">
    <div class="container mx-auto px-4">
        <div class="max-w-md mx-auto">
            <div class="bg-white p-8 rounded-lg shadow">
                <div class="text-center mb-8">
                    <h1 class="text-3xl font-bold font-serif">Welcome Back</h1>
                    <p class="text-gray-600">Sign in to your account</p>
                </div>

                <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="space-y-4">
                    <div asp-validation-summary="All" class="text-red-500 text-sm"></div>

                    <div>
                        <label asp-for="Input.Email" class="block text-sm font-medium mb-2">Email Address</label>
                        <input asp-for="Input.Email" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-amber-500" placeholder="Enter your email" />
                        <span asp-validation-for="Input.Email" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="Input.Password" class="block text-sm font-medium mb-2">Password</label>
                        <input asp-for="Input.Password" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-amber-500" placeholder="Enter your password" />
                        <span asp-validation-for="Input.Password" class="text-red-500 text-sm"></span>
                    </div>

                    <div class="flex items-center justify-between">
                        <div class="flex items-center">
                            <input asp-for="Input.RememberMe" class="rounded" />
                            <label asp-for="Input.RememberMe" class="ml-2 text-sm">Remember me</label>
                        </div>
                    </div>

                    <button type="submit" class="w-full px-6 py-3 bg-amber-600 text-white rounded-md hover:bg-amber-700 font-medium">
                        Sign In
                    </button>

                    <div class="text-center">
                        <p class="text-sm text-gray-600">
                            Don't have an account?
                            <a asp-page="./Register" class="text-amber-600 hover:text-amber-700 font-medium">Sign up</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
